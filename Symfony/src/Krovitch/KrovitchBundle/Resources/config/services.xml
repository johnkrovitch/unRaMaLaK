<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
  <parameters>
    <parameter key="krovitch.content_manager.class">Krovitch\KrovitchBundle\Manager\ContentManager</parameter>
  </parameters>

  <services>
    <service id="twig.extension.krovitch" class="Krovitch\KrovitchBundle\Twig\Extension\KrovitchExtension"
             public="false">
      <tag name="twig.extension"/>
      <argument type="service" id="twig.loader"/>
    </service>

    <service id="krovitch.demo.listener" class="Krovitch\KrovitchBundle\ControllerListener">
      <tag name="kernel.event_listener" event="kernel.controller" method="onKernelController"/>
      <argument type="service" id="twig.extension.krovitch"/>
    </service>

    <service id="krovitch.content_manager" class="%krovitch.content_manager.class%">
      <argument type="service" id="doctrine.orm.entity_manager" />
    </service>
  </services>
</container>