<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
  <parameters>
    <!-- managers -->
    <parameter key="krovitch.content_manager.class">Krovitch\UnramalakBundle\Manager\ContentManager</parameter>
    <parameter key="krovitch.hero_manager.class">Krovitch\UnramalakBundle\Manager\HeroManager</parameter>
    <parameter key="krovitch.map_manager.class">Krovitch\UnramalakBundle\Manager\MapManager</parameter>
    <!-- listeners -->
    <parameter key="sensio_framework_extra.view.listener.class">Krovitch\UnramalakBundle\Listener\ParametersTemplateListener</parameter>
    <parameter key="krovitch.listener.preExecute.class">Krovitch\UnramalakBundle\Listener\ControllerPreExecuteListener</parameter>
  </parameters>

  <services>
    <!-- managers -->
    <service id="krovitch.content_manager" class="%krovitch.content_manager.class%">
      <argument type="service" id="doctrine.orm.entity_manager"/>
    </service>
    <service id="krovitch.hero_manager" class="%krovitch.hero_manager.class%">
      <argument type="service" id="doctrine.orm.entity_manager"/>
    </service>
    <service id="krovitch.map_manager" class="%krovitch.map_manager.class%">
      <argument type="service" id="doctrine.orm.entity_manager"/>
    </service>

    <service id="krovitch_user.registration.form.type" class="Krovitch\KrovitchUserBundle\Form\RegistrationFormType">
      <tag name="form.type" alias="krovitch_user_registration"/>
      <argument>%fos_user.model.user.class%</argument>
    </service>

    <!-- preExecute listener -->
    <service id="controller.pre_execute_listener" class="%krovitch.listener.preExecute.class%">
      <tag name="kernel.event_listener" event="kernel.controller" method="onCoreController"/>
    </service>
  </services>
</container>