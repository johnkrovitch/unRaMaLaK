{% include 'KrovitchUnramalakBundle:Map:map.menu.html.twig' %}

<canvas id="myCanvas" width="938" height="1000" class="hero-unit" style="padding: 10px">
    loading into the deep space...
</canvas>

{% include 'KrovitchUnramalakBundle:Map:map.images.html.twig' %}

<script>
    $(document).ready(function () {
        var mapData = {{ data|raw }};
        var textures = {{ textures|raw }};
        var routing = {{ path('unramalak.map.save')|json_encode|raw }};

        mapData.profile.routing = {
            save : routing
        };

        console.log('routing', routing);

        var ur = new Unramalak.Application();
        ur.load('myCanvas', mapData, textures);
        ur.run();
    });
</script>