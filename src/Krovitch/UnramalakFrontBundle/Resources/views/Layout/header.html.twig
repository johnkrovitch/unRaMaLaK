{% set route = app.request.get('_route') %}

<div class="navbar navbar-fixed-top">
    <div class="container">

        <div class="navbar-header">
            <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="{{ path('homepage') }}" class="navbar-brand">Unramalak</a>
        </div>

        <div class="collapse navbar-collapse bs-navbar-collapse">

            <ul class="nav navbar-nav navbar-right">
                {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    <!-- logged stuff -->
                    {#<li><a href="{{ path('map') }}" class="active">Map</a></li>#}

                    {% if is_granted('ROLE_ADMIN') %}
                        <li><a href="{{ path('admin') }}" class="active">Admin</a></li>
                    {% endif %}

                    <li><a href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans }}</a></li>

                {% else %}
                    <!-- foreigners -->
                    <li><a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans }}</a></li>
                    <li{{ (route == 'register') ? ' class="active"' : '' }}>
                        <a href="{{ path('register') }}">{{ 'layout.register'|trans }}</a>
                    </li>

                {% endif %}
            </ul>
        </div>

    </div>
</div>